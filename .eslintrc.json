{
    "env": {
        "browser": true,
        "es6": true,
		"webextensions": true		
    },
    "extends": [
        "plugin:react/recommended",
				"standard",
				"react-app"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "chrome": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
			"react-hooks/rules-of-hooks": "error"
    }
}